a=float(input("Enter the first number"))
b=float(input("Enter the second number"))
def add():
    return a+b

def sub():
    return a-b

def mul():
    return a*b

def div():
    return a/b

while True:
 x=int(input("""Enter the operation which you want to perform:
 1. addition
 2. subtraction
 3. multiplication
 4. divide
 """))
 if x==1:
    print("the addition of numbers is:", add())
 elif x==2:
    print("the subtraction of numbers is:", sub())
 elif x==3:
    print("the multiplication of numbers is:", mul())
 elif x==4:
    print("the division of numbers is:", div())
 else:
     print("Error only enter number between 1 and 4")
 g=input("Again want to calculate: y/n- ")
 if g!="y":
     break
print("Thankyou for using our digital calculator")
